<!-- views/home.handlebars -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Homepage</title>
</head>
<body>
  <h1>Welcome to the Blog</h1>
  
  {{#if posts.length}}
    <ul>
      {{#each posts}}
        <li>
          <h2>{{title}}</h2>
          <p>{{content}}</p>
          <p>Created on {{createdAt}}</p>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No blog posts found.</p>
  {{/if}}

  <a href="/auth/signup">Sign Up</a> | <a href="/auth/signin">Sign In</a>
</body>
</html>
